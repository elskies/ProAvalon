<% include partials/header %>

<style>
    .myContainer {
        border-radius: 50px;

        padding-top: 5%;
        padding-bottom: 5%;
        margin-bottom: 30px;
        color: inherit;
        background-color: #eee;
        
        width:95%;
    }

    .myTable {
    	width: 100%;
    }

    .myTable td, th{
        border-bottom: 1px solid #ddd;
        /* table-layout: fixed; */

        /* width: 100%; */
    }

    .myTable th{
        height: 30px;
    }

    .myTable tr:hover {
    	background-color:#f5f5f5;
    }

</style>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h3 class="uppercase">View our players from all over the world</h3>
		</div>
	</header>

	<div class="row">
		<table class="myTable">
			<tr>
				<th>Username</th>
				<th>Nationality</th>
				<th>Biography</th>
				<th>Games Played</th>
			</tr>
			<% users.forEach(function(user){ %>
			<tr>
				<td><img src = "<%= user.avatarImgRes %>"><%= user.username %></td>
				<td><%= user.nationality %></td>
				<td><%= user.biography %></td>
				<td><%= user.totalGamesPlayed %></td>
			</tr>
			<% }); %>
		</table>
		</div>
	</div>

<% include partials/footer %>